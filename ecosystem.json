{
    "apps": [
        {
            "name": "backer-server",
            "script": "src/main.ts",
            "env": {
                "NODE_ENV": "development",
                "COMMON_VARIABLE": "true"
            },
            "env_production": {
                "NODE_ENV": "production"
            }
        }
    ],
    "deploy": {
        "production": {
            "user": "root",
            "host": ["39.108.2.87"],
            "port": 8080,
            "ref": "origin/dev",
            "repo": "git@github.com:papa-was-a/backer.git",
            "path": "/www/backer-server",
            "ssh_options": "StrictHostKeyChecking=no",
            "post-deploy": "cnpm install && npm run db && yarn start:prod",
            "env": {
                "NODE_ENV": "production"
            }
        }
    }
}